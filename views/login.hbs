<div class="login-form">
    <h1>Login Form</h1>
    <form action="login" method="POST">
        <input type="text" name="username" placeholder="Username" value="{{player}}" required>
        <input maxlength="4" type="text" name="roomcode" placeholder="roomcode" required>
        <input type="submit">
    </form>
    <div id="loginError">
        <span>{{error}}</span>
    </div>
</div>